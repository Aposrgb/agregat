{% extends 'base.html.twig' %}

{% block title %}Список Подкатегорий{% endblock %}

{% block body %}
    <h1>Список Подкатегорий</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Изображение</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Категория</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.img }}</td>
                <td>{{ sub_category.title }}</td>
                <td>{{ sub_category.description }}</td>
                <td>{{ sub_category.category.title ?? ''}}</td>
                <td>
                    <a href="{{ path('app_sub_categories_show', {'id': sub_category.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_sub_categories_edit', {'id': sub_category.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sub_categories_new') }}">Добавить</a>
{% endblock %}
