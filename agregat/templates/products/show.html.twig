{% extends 'base.html.twig' %}

{% block title %}Продукт{% endblock %}

{% block body %}
    <h1>Продукт</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Идентификатор</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Изображение</th>
                <td>{{ product.img }}</td>
            </tr>
            <tr>
                <th>Рейтинг</th>
                <td>{{ product.rating }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Является актуальным</th>
                <td>{{ product.isActual ? 'Да' : 'Нет' }}</td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Цена</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Остаток на складе</th>
                <td>{{ product.balanceStock }}</td>
            </tr>
            <tr>
                <th>Ключевые слова</th>
                <td>{{ product.keyWords }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}">Вернуться к списку</a>

    <a href="{{ path('app_products_edit', {'id': product.id}) }}">Редактировать</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
