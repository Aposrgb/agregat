{% extends 'base.html.twig' %}

{% block title %}Настройка{% endblock %}

{% block body %}
    <h1>Настройка</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Идентификатор</th>
                <td>{{ setting.id }}</td>
            </tr>
            <tr>
                <th>Получатель рассылки</th>
                <td>{{ setting.senderTo }}</td>
            </tr>
            <tr>
                <th>Тип</th>
                <td>{{ setting.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_settings_index') }}">Вернуться к списку</a>

    <a href="{{ path('app_settings_edit', {'id': setting.id}) }}">Редактировать</a>

{% endblock %}
