{% extends 'base.html.twig' %}

{% block title %}Контакты{% endblock %}

{% block body %}
    <h1>Контакты</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Описание</th>
                <th>Подтип</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for text in texts %}
            <tr>
                <td>{{ text.description }}</td>
                <td>{{ text.getSubTypeName() }}</td>
                <td>
                    <a href="{{ path('app_texts_show_contacts', {'id': text.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_texts_edit_contacts', {'id': text.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
