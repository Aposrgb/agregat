{% extends 'base.html.twig' %}

{% block title %}Список обратной связи{% endblock %}

{% block body %}
    <h1>Список обратной связи</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Название</th>
                <th>Телефон</th>
                <th>Email</th>
                <th>Сообщение</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedback %}
            <tr>
                <td>{{ feedback.id }}</td>
                <td>{{ feedback.name }}</td>
                <td>{{ feedback.phone }}</td>
                <td>{{ feedback.email }}</td>
                <td>{{ feedback.message }}</td>
                <td>{{ feedback.status }}</td>
                <td>
                    <a href="{{ path('app_feedback_show', {'id': feedback.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_feedback_edit', {'id': feedback.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_feedback_new') }}">Добавить</a>
{% endblock %}
