{% extends 'base.html.twig' %}

{% block title %}Как купить{% endblock %}

{% block body %}
    <h1>Как купить</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Подтип</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for text in texts %}
            <tr>
                <td>{{ text.id }}</td>
                <td>{{ text.title }}</td>
                <td>{{ text.description }}</td>
                <td>{{ text.getSubTypeName() }}</td>
                <td>
                    <a href="{{ path('app_texts_show_how_buy', {'id': text.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_texts_edit_how_buy', {'id': text.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_texts_new_how_buy') }}">Добавить</a>
{% endblock %}
