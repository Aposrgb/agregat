{% extends 'base.html.twig' %}

{% block title %}Список Категорий{% endblock %}

{% block body %}
    <h1>Список Категорий</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Является популярным</th>
                <th>Изображение</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.isPopular ? 'Да' : 'Нет' }}</td>
                <td>
                    {% if  category.img %}
                        <div>
                            <img src="{{  category.img }} "style="width: 32px;height: 32px">
                        </div>
                    {% endif %}
                </td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('app_categories_show', {'id': category.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_categories_edit', {'id': category.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categories_new') }}">Добавить</a>
{% endblock %}
