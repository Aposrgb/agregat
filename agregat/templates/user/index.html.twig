{% extends 'base.html.twig' %}

{% block title %}Список Пользователей{% endblock %}

{% block body %}
    <h1>Список Пользователей</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Дата регистрации</th>
                <th>Роли</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.patronymic }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.dateRegistration ? user.dateRegistration|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.status }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Добавить</a>
{% endblock %}
