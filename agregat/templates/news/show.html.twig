{% extends 'base.html.twig' %}

{% block title %}Новость{% endblock %}

{% block body %}
    <h1>Новость</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Идентификатор</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ news.name }}</td>
            </tr>
            <tr>
                <th>Текст</th>
                <td>{{ news.text }}</td>
            </tr>
            <tr>
                <th>Изображение</th>
                <td><img src="{{ news.img ?? '' }}" style="max-width: 350px;"/></td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_index') }}">Вернуться к списку</a>

    <a href="{{ path('app_news_edit', {'id': news.id}) }}">Редактировать</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
