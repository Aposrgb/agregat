{% extends 'base.html.twig' %}

{% block title %}Список новостей{% endblock %}

{% block body %}
    <h1>Список новостей</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Название</th>
                <th>Текст</th>
                <th>Изображение</th>
                <th>Дата создания</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.name }}</td>
                <td>{{ news.text }}</td>
                <td><img src="{{ news.img ?? '' }}" style="max-width: 350px;"/></td>
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_news_show', {'id': news.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_news_edit', {'id': news.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_new') }}">Добавить</a>
{% endblock %}
