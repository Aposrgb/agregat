{% extends 'base.html.twig' %}
{% block title %}Список ключевых слов{% endblock %}

{% block body %}
    <h1>Список ключевых слов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ключевые слова</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.keyWords }}</td>
                <td>
                    <a href="{{ path('app_keyword_show', {'id': product.id}) }}">Посмотреть</a>
                    <a href="{{ path('app_keyword_edit', {'id': product.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
