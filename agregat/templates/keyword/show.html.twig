{% extends 'base.html.twig' %}

{% block title %}Ключевые слова{% endblock %}

{% block body %}
    <h1>Ключевые слова</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ключевые слова</th>
                <td>{{ product.keyWords }}</td>
            </tr>
            <tr>
                <th>Идентификатор продукта</th>
                <td>{{ product.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_keyword_index') }}">Вернуться к списку</a>

    <a href="{{ path('app_keyword_edit', {'id': product.id}) }}">Редактировать</a>

{% endblock %}
