{% extends 'base.html.twig' %}

{% block title %}Список покупок{% endblock %}

{% block body %}
    <h1>Список покупок</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Дата покупки</th>
                <th>Статус</th>
                <th>Дата доставки</th>
                <th>Тип доставки</th>
                <th>Кол - во</th>
                <th>Название покупки</th>
                <th>Цена</th>
                <th>Статус доставки</th>
                <th>Адрес доставки</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Телефон</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr>
                <td>{{ purchase.id }}</td>
                <td>{{ purchase.datePurchase ? purchase.datePurchase|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ purchase.statusName }}</td>
                <td>{{ purchase.dateArrive ? purchase.dateArrive|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ purchase.deliveryServiceName }}</td>
                <td>{{ purchase.count }}</td>
                <td>{{ purchase.product.title }}</td>
                <td>{{ purchase.price }}</td>
                <td>{{ purchase.deliveryStatusName }}</td>
                <td>{{ purchase.deliveryAddress }}</td>
                <td>{{ purchase.name }}</td>
                <td>{{ purchase.surname }}</td>
                <td>{{ purchase.phone }}</td>
                <td>
                    <a href="{{ path('app_purchase_show', {'id': purchase.id}) }}">Посмотреть</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
